###############################################################################
# Configuration
###############################################################################

VERSION='0.1.0'
PROG_NAME="$(basename "$0")"

usage() {
  cat << EOF
usage: $PROG_NAME [-Chnv]
  -C        disable color output
  -h        display help
  -n        disable ASCII art
  -v        display version
EOF
  exit "${1:-0}"
}

version() {
  echo "sysinfo-$VERSION"
  exit 0
}

# Terminal colors
setup_colors() {
  if [ "$USE_COLOR" -eq 1 ] && [ -t 1 ] && [ -x "$(command -v tput)" ]; then
    bold="$(tput bold 2>/dev/null)"
    reset="$(tput sgr0 2>/dev/null)"
    yellow="$(tput setaf 3 2>/dev/null)"
    green="$(tput setaf 2 2>/dev/null)"
    cyan="$(tput setaf 6 2>/dev/null)"
  else
    bold='' reset='' yellow='' green='' cyan=''
  fi

  # Color scheme
  lc="${reset}${bold}${yellow}"  # labels
  uc="${reset}${bold}${green}"   # username
  hc="${reset}${bold}${cyan}"    # hostname
  ic="${reset}"                  # information
}

###############################################################################
# System Information Collectors
###############################################################################

get_wm() {
  # Check Wayland first
  [ -n "$WAYLAND_DISPLAY" ] && {
    [ -n "$XDG_CURRENT_DESKTOP" ] && echo "$XDG_CURRENT_DESKTOP" || echo 'Wayland'
    return
  }

  # No X11/Wayland running
  [ -n "$DISPLAY" ] || return

  # Check common WM-specific environment variables
  [ -n "$WINDOW_MANAGER" ] && {
    basename "$WINDOW_MANAGER"
    return
  }

  # Try process list, prioritizing OpenBSD-common WMs
  ps aux | grep -E -m 1 '\b(cwm|fvwm|twm|dwm|xenodm|i3|openbox|fluxbox|bspwm|awesome|xfwm4|icewm)\b' \
    | grep -v grep | awk '{print $11}' | sed 's/.*\///'
}

get_uptime() {
  uptime | sed -E 's/.* up +//; s/, *[0-9]+ users?.*//; s/, *load averages?.*//; s/^ *//' | {
    IFS=',' read -r first_part second_part third_part

    process_part() {
      local part=$(echo "$1" | sed -E 's/^[[:space:]]*//; s/[[:space:]]*$//')

      # Days (e.g., "2 days")
      if echo "$part" | grep -qE '[0-9]+[[:space:]]+day(s?)'; then
        local d=$(echo "$part" | sed -E 's/[^0-9]//g')
        printf '%dd' "$((10#$d))"
        return
      fi

      # HH:MM format (e.g., "12:34")
      if echo "$part" | grep -qE '[0-9]+:[0-9]+'; then
        local h=$(echo "$part" | cut -d: -f1 | sed 's/[^0-9]//g')
        local m=$(echo "$part" | cut -d: -f2 | sed 's/[^0-9]//g')
        printf '%dh %dm' "$((10#$h))" "$((10#$m))"
        return
      fi

      # Hours (e.g., "5 hours")
      if echo "$part" | grep -qE '[0-9]+[[:space:]]+hour(s?)'; then
        local h=$(echo "$part" | sed -E 's/[^0-9]//g')
        printf '%dh' "$((10#$h))"
        return
      fi

      # Minutes (e.g., "08 mins")
      if echo "$part" | grep -qE '[0-9]+[[:space:]]+min(s?|ute(s?))'; then
        local m=$(echo "$part" | sed -E 's/[^0-9]//g')
        printf '%dm' "$((10#$m))"
        return
      fi

      # Seconds (e.g., "09 secs")
      if echo "$part" | grep -qE '[0-9]+[[:space:]]+sec(s?|ond(s?))'; then
        local s=$(echo "$part" | sed -E 's/[^0-9]//g')
        printf '%ds' "$((10#$s))"
        return
      fi

      # Numeric fallback (e.g., "08" â†’ 8 minutes)
      if echo "$part" | grep -qE '^[0-9]+$'; then
        printf '%dm' "$((10#$part))"
      fi
    }

    # Process all valid parts
    local output=''
    for part in "$first_part" "$second_part" "$third_part"; do
      [ -z "$part" ] && continue
      local processed=$(process_part "$part")
      output="$output${output:+ }$processed"
    done

    [ -z "$output" ] && output='0s'
    echo "$output"
  }
}

get_gpu() {
  # Try to extract quoted GPU name from any device line
  local gpu=$(dmesg | \
    grep -i -E '(gpu|vga|drm|pci|virtio|graphics)' | \
    sed -E -n 's/.*"(.*)".*/\1/p' | \
    grep -i -m1 -E 'gpu|vga|graphics|radeon|nvidia|intel|amd')
  [ -n "$gpu" ] && { echo "$gpu"; return; }
}

format_size() {
  awk -v bytes="$1" 'BEGIN {
    suffix = "BKMGT"
    while (bytes >= 1024 && length(suffix) > 1) {
      bytes /= 1024
      suffix = substr(suffix, 2)
    }
    if (bytes == int(bytes)) {
      printf "%d%c", bytes, substr(suffix,1,1)
    } else {
      printf "%.1f%c", bytes, substr(suffix,1,1)
    }
  }'
}

get_memory() {
  # Get total physical memory
  local total=$(sysctl -n hw.physmem 2>/dev/null) || {
    echo "failed to get total memory" >&2
    return 1
  }

  # Get memory stats from vmstat with exact matches
  local vmstat_output=$(vmstat -s)
  local pagesize=$(sysctl -n hw.pagesize)

  local active_pages=$(echo "$vmstat_output" | awk '/pages active$/ {print $1}')
  local wired_pages=$(echo "$vmstat_output" | awk '/pages wired$/ {print $1}')
  local free_pages=$(echo "$vmstat_output" | awk '/pages free$/ {print $1}')

  # Validate numbers
  [ -z "$active_pages" ] && active_pages=0
  [ -z "$wired_pages" ] && wired_pages=0
  [ -z "$free_pages" ] && free_pages=0

  # Calculate memory usage
  local used=$(( (active_pages + wired_pages) * pagesize ))
  local available=$(( (active_pages + wired_pages + free_pages) * pagesize ))

  # Calculate percentage (prevent division by zero)
  local percent=0
  if [ "$available" -gt 0 ]; then
    percent=$(( (used * 100) / available ))
  fi

  printf '%s / %s (%d%%)' \
    "$(format_size "$used")" \
    "$(format_size "$total")" \
    "$percent"
}

get_vm_type() {
  local mappings='hypervisor:HyperV vmm:VMM bhyve:bhyve xen:Xen qemu:QEMU \
kvm:KVM vmware:VMware virtualbox:VirtualBox parallels:Parallels'
  local dmesg_out="$(dmesg)"

  echo "$mappings" | tr ' ' '\n' | while IFS=: read -r pattern name; do
    if echo "$dmesg_out" | grep -qi "$pattern"; then
      echo "$name"
      return 0
    fi
  done

  if sysctl -n hw.model | grep -qi 'virtual'; then
    echo 'Virtual'
  fi
}

###############################################################################
# Main Information Collection
###############################################################################

collect_system_info() {
  # Basic system information
  User="$USER"
  Hostname="$(hostname)"
  OS="$(uname -sr)"
  Kernel="$(uname -v)"
  Machine="$(sysctl -n hw.machine)"
  VM_Type="$(get_vm_type)"

  # Hardware information
  CPU="$(sysctl -n hw.model)"
  CPU_Cores="$(sysctl -n hw.ncpuonline)"
  GPU="$(get_gpu)"
  RAM="$(get_memory)"

  # System status
  Shell="$(basename "$SHELL")"
  Uptime="$(get_uptime)"
  Packages="$(pkg_info -q | wc -l | tr -d ' ')"
  Disk="$(df -h / | awk 'NR==2 {printf "%s / %s (%s)", $3, $2, $5}')"
  WM="$(get_wm)"
}

###############################################################################
# Display Functions
###############################################################################

print_system_info() {
  if [ "$NO_ASCII" -eq 0 ]; then
    cat << EOF
                      ${uc}$User${reset}${bold}@${hc}$Hostname${reset}
      _____           ${lc}OS${ic}: $OS
   \\-      -/    o    ${lc}Kernel${ic}: $Kernel
\\_/          \\  o     ${lc}Machine${ic}: $Machine${VM_Type:+ ($VM_Type)}
|         O O |  o    ${lc}CPU${ic}: $CPU ($CPU_Cores*)
|_  <    )  3 ) o     ${lc}GPU${ic}: ${GPU:--}
/ \\          /        ${lc}Memory${ic}: $RAM
   /-_____ -\\         ${lc}Disk${ic} ${bold}(${lc}/${ic}${bold})${ic}: $Disk
                      ${lc}Shell${ic}: $Shell
                      ${lc}Uptime${ic}: $Uptime
                      ${lc}Packages${ic}: $Packages${WM:+
                      ${lc}WM${ic}: $WM}
EOF
  else
    cat << EOF
${uc}$User${reset}${bold}@${hc}$Hostname${reset}
${lc}OS${ic}: $OS
${lc}Kernel${ic}: $Kernel
${lc}Machine${ic}: $Machine${VM_Type:+ ($VM_Type)}
${lc}CPU${ic}: $CPU ($CPU_Cores*)
${lc}GPU${ic}: ${GPU:--}
${lc}Memory${ic}: $RAM
${lc}Disk${ic}${bold} (${lc}/${ic}${bold})${ic}: $Disk
${lc}Shell${ic}: $Shell
${lc}Uptime${ic}: $Uptime
${lc}Packages${ic}: $Packages${WM:+
${lc}WM${ic}: $WM}
EOF
  fi
}

###############################################################################
# Main Execution
###############################################################################

main() {
  if [ -n "${NO_COLOR+x}" ]; then
    USE_COLOR=0
  else
    USE_COLOR=1
  fi
  NO_ASCII=0

  while getopts 'Chnv' opt; do
    case "$opt" in
      C) USE_COLOR=0 ;;
      h) usage ;;
      n) NO_ASCII=1 ;;
      v) version ;;
      *) usage 1 ;;
    esac
  done
  shift $((OPTIND - 1))

  setup_colors
  collect_system_info
  print_system_info
}

main "$@"
